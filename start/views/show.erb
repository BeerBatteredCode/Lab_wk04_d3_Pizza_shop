
<div class="show">
  <p>DETAILS</p>
  <div class="showbox">
    <p> Full Name: <%= @order.pretty_name %> </p>
    <p> Topping: <%= @order.topping %> </p>
    <p> Quantity: <%= @order.quantity %> </p>
  </div>
</div>

<div class="button">
  <form action="/pizza-orders/<%=@order.id%>/delete"  method="post">
    <input type="submit"  value="DELETE">
  </form>

  <form  action= "/pizza-orders/<%=@order.id%>/edit" method="get">
    <input type="submit" value="EDIT">
  </form>
</div>
